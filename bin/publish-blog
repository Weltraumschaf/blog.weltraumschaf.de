#!/usr/bin/env bash

set -e

now=$(date +"%d-%m-%yT%H:%M")
echo "Start publishing ${now}..."
cd /var/www/blog.weltraumschaf.de
git pull origin master
/home/sxs/src/java/juberblog/bin/juberblog publish -v -c configuration/configuration.properties
sass sass/main.scss public/css/main.css
chmod -R a+rX public
cd -
echo "Publishing finished :-)"